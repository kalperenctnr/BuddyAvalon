<UserControl
		xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:BuddyAvalon.ViewModels"
		xmlns:views="clr-namespace:BuddyAvalon.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:CompileBindings="True"
        x:Class="BuddyAvalon.Views.MainView"
        x:DataType="viewModels:MainViewModel">
	<Design.DataContext>
		<viewModels:MainViewModel />
	</Design.DataContext>


	<StackPanel Orientation="Horizontal">
		<StackPanel Orientation="Vertical">
			<Grid ShowGridLines="True" Margin="5"
				  ColumnDefinitions="Auto, Auto"
				  RowDefinitions="Auto, Auto, Auto">
				<Button Grid.Row="0" Grid.Column="0" Margin="10" Content="Select Test File"/>
				<TextBox Grid.Row="0" Grid.Column="1" Margin="0 5" Text="Test File"/>

				<Button Grid.Row="1" Grid.Column="0" Margin="10" Content="Select Result"/>
				<TextBox Grid.Row="1" Grid.Column="1" Margin="0 5" Text="Result Folder"/>

				<Label Grid.Row="2" Grid.Column="0" Margin="10" Content="Result File Name:"/>
				<TextBox Grid.Row="2" Grid.Column="1" Margin="0 5" Text="Result File"/>


			</Grid>
		</StackPanel>

		<StackPanel Orientation="Vertical">			
			<DockPanel LastChildFill="True">
				<DockPanel DockPanel.Dock="Bottom">
					<Button DockPanel.Dock="Left" Command="{Binding OpenFileCommand}">Open File</Button>

					<Button DockPanel.Dock="Right" Command="{Binding ChangePageCommand}">Camera Page</Button>
				</DockPanel>
				<ListBox DockPanel.Dock="Bottom" ItemsSource="{Binding ErrorMessages}"/>
				<TextBox Text="{Binding FileText, Mode=TwoWay}"
						 AcceptsReturn="True"
						 AcceptsTab="True" />
			</DockPanel>
		</StackPanel>
	</StackPanel>


</UserControl>
